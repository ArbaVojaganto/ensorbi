{
  "version": "0.2.0",
  "configurations": [
    {
      //debugの名称(任意)デバッグ開始ボタンのプルダウンメニューの選択肢に表示される
      "name": "Start Server Debugger",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      // deno_emit等wasm系処理をしつつ、デバッガ貼ると例外が発生するようなので注意する
      "runtimeArgs": ["run", "--unstable", "--inspect-brk", "-A", "app/server/main.ts", "--http-server"],
      //tasks.jsonで定義したtaskにリンクする
      //デバッグ実行時のコンパイルチェックが重いときはコメントアウト
      //そのかわりコンパイルチェックは自前でコマンドラインでtscコマンドで実行する
      //"preLaunchTask": "Compile TypeScript",
      "preLaunchTask": "Open localhost",
      "attachSimplePort": 9229
    },
    {
      "name": "ensorbi-reconstruct-referrers",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--unstable", "-A", "app/server/main.ts", "--reconstruct-referrers"],
      "attachSimplePort": 9229
    },
    {
      "name": "Build Project for Deno Deploy",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--unstable", "-A", "app/server/main.ts", "--build-deno-deploy-project"],
      "attachSimplePort": 9229
    }
  ]
}