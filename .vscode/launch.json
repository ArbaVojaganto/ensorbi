{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Server Debugger",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect", "--unstable", "-A", "app/server/main.ts", "--http-server"],
      "attachSimplePort": 9229
    },
    {
      "name": "Reconstruct Referrers",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--unstable", "-A", "app/server/main.ts", "--reconstruct-referrers"],
      "attachSimplePort": 9229
    }
  ]
}